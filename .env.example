# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aptitude_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# ========================================
# SECURITY CONFIGURATION ⚠️ CRITICAL
# ========================================

# JWT Secret - MUST be a strong random string (minimum 32 characters)
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_very_long_random_secret_key_minimum_32_characters_like_this_one_is_good_abc123def456

# CORS - Specify allowed origins (comma-separated)
# In production, ONLY include your actual domain
# Example: ALLOWED_ORIGINS=https://aptitudehub.com,https://www.aptitudehub.com
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
# Set to 'production' for live deployment
# NODE_ENV=production

PORT=5000

# ========================================
# APPLICATION CONFIGURATION
# ========================================
APP_NAME=AptitudeHub
APP_URL=http://localhost:5000

# ========================================
# IMPORTANT SECURITY NOTES
# ========================================
# 1. NEVER commit your .env file to git - it contains secrets!
# 2. Generate a strong JWT_SECRET and keep it secret
# 3. In production, use HTTPS (https:// not http://)
# 4. Set NODE_ENV=production before deploying
# 5. Keep database credentials secure and use strong passwords
# 6. Regularly rotate your JWT_SECRET if compromised
